<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
</head>
<body>
    <%- include('../partials/header') %> 
    <main class="container py-5">
        <div class="row gx-5">
            <% if(product){ %> 

            <div class="col-md-5">
                <img src="<%=product.image%>" class="card-img-top" alt="<%=product.name%>">
                </div> <!-- // .col-md-5 -->

            <div class="col-md-7">
                <h1><%= product.name %></h1>
                <h4 class="fw-light"><%=product.description%></h4>
                <hr>
                <p class="fs-3 fw-bold">$<%=product.price%></p>

                <div class="d-flex mb-3" id="qtyContainer">
                    <div class="qtyField me-3 rounded">
                        <button class="btn no-shadow" onclick="handleMinusButton()">-</button>
                        <input readonly id="quantity" value=1>
                        <button class="btn no-shadow" onclick="handlePlusButton(<%= product.stock %>)">+</button>
                    </div>
                    <button class="btn btn-primary" onclick="addProductToCart()">Add to cart</button>
                </div>

                <%- include("../partials/addToCartMessage") %> 
                
            </div>
               
        <% }else { %> 
            <div class="col">
                <div class="alert alert-warning" role="alert">
                    No data was found
                </div>
            </div>
            <% } %> 
        </div> <!-- // .row -->
    </main>

    <script src="/js/main.js"></script>
    <%- include('../partials/footer') %> 
</body>
</html>