<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
</head>
<body>
    <%- include('../partials/header') %> 
    <main class="container py-5">
        <div class="row gx-5">
            <% if(product){ %> 

            <div class="col-md-5">
                <img src="<%=product.image%>" class="card-img-top" alt="<%=product.name%>">
                </div> <!-- // .col-md-5 -->

            <div class="col-md-7">
                <h1><%= product.name %></h1>
                <h4 class="fw-light"><%=product.description%></h4>
                <hr>
                <p class="fs-3 fw-bold">$<%=product.price%></p>
                <div class="qtyField me-3 rounded">
                    <button class="btn no-shadow">-</button>
                    <input readonly="" value="1">
                    <button class="btn no-shadow">+</button>
                </div>
            </div>
               
        <% }else { %> 
            <div class="col">
                <div class="alert alert-warning" role="alert">
                    No data was found
                </div>
            </div>
            <% } %> 
        </div> <!-- // .row -->
    </main>

    <%- include('../partials/footer') %> 
</body>
</html>