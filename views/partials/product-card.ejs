<div class="card border-0 col-lg-3 col-md-6 shadow bg-white p-0">
    <a href= <%= "http://localhost:"+port+"/product/"+product._id %> class="text-reset text-decoration-none" >
        
            <img src= <%= product.image %> class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= product.name  %></h5>
                <p class="card-text"> <%= product.description %>  </p>
            </div> <!-- // .card-body -->
            
            <div class="card-body">
                $<%= product.price %>
                <br>
                <% if (mode=="MONGO") { %>
                <a href= <%= "http://localhost:"+port+"/product/"+product._id  %>  class="btn btn-primary">Add to cart</a>
        
                <% } else { %>
                <a href= <%= "http://localhost:"+port+"/product/"+product.id  %>  class="card-link">Update</a>
                <% }  %>
            </div> <!-- // .card-body -->
    </a>
</div> <!-- // .card -->